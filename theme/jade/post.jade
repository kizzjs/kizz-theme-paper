extends ./base.jade

block head
  meta(name="kizz-router", content="post")

block content
  article
    header
      h1
        a(href="#") #{post.title}
      .meta
        .key Update:
        .value #{post.modificationTime}
        .key Tags:
        .value
          ul.tags
            each tag in post.tags
              li.tag= tag
        .key Categories:
        .value
          ul
            each cat in post.categories
              li.cat= cat
    main!= post.content
    #comments
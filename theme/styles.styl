@import url('http://fonts.googleapis.com/css?family=Source+Code+Pro');
@import 'prism'

theme-color = #1E90FF
inner-padding = 48px

// common

body, header, footer, a, h1, p
  padding 0
  margin 0

p
  line-height 2em

code, pre
  font-size 14px
  font-family: 'Source Code Pro' !important;

a
  text-decoration none
  color #333
  transition color .5s
  &:hover
    color #000

h1
  font-size 36px

font-hei()  
  font-family "Helvetica Neue", Helvetica, "Nimbus Sans L", Arial, "Liberation Sans", "Hiragino Sans GB", "Source Han Sans CN Normal", "Microsoft YaHei", "Wenquanyi Micro Hei", "WenQuanYi Zen Hei", "ST Heiti", SimHei, "WenQuanYi Zen Hei Sharp", sans-serif

body
  background #fff
  color #555
  font-hei()

#header
  padding inner-padding
  color theme-color
  text-align center
  font-size 24px
  color #111
  h1
    font-size 36px
    display inline-block
    padding .3em
    margin-bottom .25em
    font-weight bold
    a
      color #111
      &:hover
        color theme-color



#main
  padding inner-padding
  width 600px
  margin 0 auto
  h1
    font-size 24px
  article
    margin-bottom 48px

.meta
  font-size 14px
  line-height 28px
  &:after
    content ''
    display block
    clear both
  ul, li
    list-style none
    padding 0
    margin 0
    float left
  .tag, .cat
    padding-right .5em
    &:hover
      color theme-color
      cursor pointer
      transition color .5s
  .key, .value
    float left
    margin-right .5em
  .key
    font-weight bold

article
  main
    margin-top 1em
    padding-top 1em

#footer
  text-align center
  font-size 12px
  padding inner-padding